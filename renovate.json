{
  "extends": [
    "config:base"
  ],
  "assignees": ["@emmercm"],
  "pinDigests": true,
  "circleci": {
    "automerge": true
  },
  "packageRules": [{
    "paths": ["**/Dockerfile"],
    "major": {
      "enabled": false
    },
    "separateMajorMinor": true,
    "minor": {
      "enabled": false
    },
    "separateMinorPatch": true,
    "patch": {
      "enabled": true
    }
  }]
}
